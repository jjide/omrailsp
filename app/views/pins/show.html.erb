<div class="row">
	<div class="profile span3">
		<h4><%= @pin.user.name %> Profile</h4>
		<div class="profile_img"></div>
		</br>
		<div class="row">
			<div class="span1.5">
				<p>Images Added: </p>
				<p>Views:</p>
				<p>Contact:</p>
				</div>
				<div class="span1">
				<p>3 </p>
				<p>100</p>
				<p class="muted"><%= @pin.user.email %></p>
					</div>
		</div>
		
		
		
	</div>
	
	<div class="span6">
		<div class="well">
		
		<%= image_tag @pin.image %>
		<p>
  			<!--<b>Description:</b> -->
  			<%= @pin.description %> <br/>
			by: <%= @pin.user.name %>
		</p>
		<% if current_user == @pin.user %>
			<%= link_to 'Edit', edit_pin_path(@pin) %> |
		<% end %>
			<%= link_to 'Back', pins_path %>
		
		</div>
	</div>
</div>